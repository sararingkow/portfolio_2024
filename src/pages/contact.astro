---
import MainLayout from "../layouts/MainLayout.astro";
import Form from "../components/Form.astro";
import "../styles/global.css";
---

<MainLayout title="Contact">
  <div class="background_container">
    <div class="background"></div>
    <h1 class="text-8xl text-main tracking-widest relative z-10">CONTACT</h1>
  </div>

  <!-- Two-column grid layout -->
  <div class="grid grid-cols-2 items-center gap-8 m-10">
    <div class="relative flex justify-center text-main pb-4">
      <Form />
    </div>
    <div>
      <!-- Text content section -->
      <h2 class="text-3xl text-main pb-4">Let's catch up!</h2>
      <p class="text-xl leading-10">
        Call or send me a message, find me on social media, or use the <br /> form to write me an email if you have a question or two. <br /> Then Iâ€™ll
        answer as soon as possible!
      </p>
      <div class="flex flex-col text-xl pt-12">
        <div class="flex items-center space-x-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-main">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"
            ></path>
          </svg>
          <a href="tel:+4542428807" class="hover:text-gray-400 hover:underline transition duration-300">+45 42 42 88 07</a>
        </div>
        <div class="flex items-center space-x-4 mt-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-main">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
            ></path>
          </svg>
          <a href="mailto:sara.ringkow@gmail.com" class="hover:text-gray-400 hover:underline transition duration-300">sara.ringkow@gmail.com</a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  #img1 {
    mask-image: linear-gradient(rgba(27, 22, 22, 20), transparent);
    -webkit-mask-image: linear-gradient(rgba(27, 22, 22, 20));
  }

  .background {
    background-image: url(/images/circles4.webp);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    filter: blur(5px) brightness(0.6); /* Applies blur to the background */
    mask-image: linear-gradient(rgba(27, 22, 22, 100), transparent);
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 0;
  }
</style>
