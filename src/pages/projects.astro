---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import "../styles/global.css";
---

<MainLayout title="My projects">
  <div class="background_container">
    <div class="background"></div>
    <!-- Separate background div for blur -->
    <h1 class="text-8xl text-main tracking-widest relative z-10">MY PROJECTS</h1>
  </div>

  <!-- Two-column grid layout -->
  <div class="flex flex-col md:flex-row gap-4 p-4 m-20">
    <!-- First column: Text -->
    <div class="w-full md:w-1/2 flex items-center justify-center md:justify-end p-4">
      <h2 class="text-2xl leading-10">1ST SEMESTER</h2>
    </div>

    <!-- Second column: Image -->
    <div class="w-full md:w-1/2 flex items-center justify-start p-4">
      <img src="images/entrance_exam.webp" alt="entrance exam" class="w-[500px] h-[500px] object-cover rounded-full" />
    </div>
  </div>

  <!-- Next row: Image and Text -->
  <div class="flex flex-col md:flex-row gap-4 p-4 m-20">
    <!-- First image -->
    <div class="flex items-center justify-center p-4">
      <img src="images/karrusel.webp" alt="karrusel" class="w-[500px] h-[500px] object-cover rounded-full" />
    </div>

    <!-- Second text block -->
    <div class="w-full md:w-1/2 flex items-center justify-start p-4 m-20">
      <h2 class="text-2xl leading-10 text-right">2ND SEMESTER</h2>
    </div>
  </div>

  <!-- Final row: Text and Image -->
  <div class="flex flex-col md:flex-row gap-4 p-4 m-10">
    <!-- Text content -->
    <div class="w-full md:w-1/2 flex items-center justify-center md:justify-end p-4 m-20">
      <h2 class="text-2xl leading-10 text-left">3RD SEMESTER</h2>
    </div>

    <!-- Image -->
    <div class="w-full md:w-1/2 flex items-center justify-start p-4">
      <img src="images/internship_prep.webp" alt="internship" class="w-[500px] h-[500px] object-cover rounded-full" />
    </div>
  </div>

  <style>
    #img1 {
      mask-image: linear-gradient(rgba(27, 22, 22, 20), transparent);
      -webkit-mask-image: linear-gradient(rgba(27, 22, 22, 20));
    }

    .background {
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      filter: blur(5px) brightness(0.8); /* Applies blur to the background */
      mask-image: linear-gradient(rgba(27, 22, 22, 100), transparent);
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      z-index: 0;
    }
  </style>
</MainLayout>
