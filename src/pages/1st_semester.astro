---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import "../styles/global.css";
---

<MainLayout title="1st semester">
  <div class="background_container">
    <div class="background"></div>
    <!-- Separate background div for blur -->
    <h1 class="text-8xl text-main tracking-widest relative z-10 pb-4">1ST SEMESTER</h1>
    <h2 class="portfolio-title text-4xl text-main tracking-widest relative z-10 text-center">
      Hover over the images <br /> & click them to learn more
    </h2>
  </div>

  <div class="relative">
    <!-- Two-column grid layout -->
    <div class="flex flex-col md:flex-row gap-4 p-4 m-20 text-main">
      <!-- First column: Decorative circle -->
      <div class="w-full md:w-1/2 flex items-center justify-center md:justify-end p-4 relative">
        <a href="/assignments/1st_semester/assignment1">
          <div class="circle1 relative overflow-hidden rounded-full shadow-lg w-[200px] h-[200px] bg-zinc-700 flex items-center justify-center z-10">
            <h2 class="text-2xl font-semibold text-center">First <br /> assignment</h2>
          </div>
        </a>
      </div>

      <!-- Second column: Image with hover effect (1st semester) -->
      <div class="w-full md:w-1/2 flex items-center justify-start p-4">
        <a href="/assignments/1st_semester/assignment1">
          <div class="circle_1st relative overflow-hidden rounded-full shadow-lg group w-[400px] h-[400px]">
            <img src="images/entrance_exam.webp" alt="entrance exam" class="w-full h-full object-cover rounded-full" />
            <div
              class="absolute inset-0 bg-black bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
            >
              <h1 class="circle-text text-4xl font-bold text-main">ENTRANCE EXAM</h1>
            </div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-transparent to-gray-300 opacity-30 pointer-events-none"></div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-b from-transparent to-gray-200 opacity-20 pointer-events-none"></div>
          </div>
        </a>
      </div>
    </div>

    <!-- Next row: Image and Text with hover effect (2nd semester) -->
    <div class="flex flex-col md:flex-row gap-4 p-4 m-20">
      <!-- First column: Image with hover effect (2nd semester) -->
      <div class="w-full md:w-1/2 flex items-center justify-center p-4">
        <a href="/assignments/1st_semester/assignment2">
          <div class="circle_2nd relative overflow-hidden rounded-full border-opacity-40 shadow-lg group w-[400px] h-[400px]">
            <img src="images/ux_site.webp" alt="ux-site" class="w-full h-full object-cover rounded-full" />
            <div
              class="absolute inset-0 bg-black bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
            >
              <h1 class="circle-text text-4xl font-bold text-main">UX/UI-site <br /><em class="text-2xl">(Super Mario Wikipedia)</em></h1>
            </div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-gray-300 to-transparent opacity-30 pointer-events-none"></div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-b from-gray-200 to-transparent opacity-20 pointer-events-none"></div>
          </div>
        </a>
      </div>

      <!-- Second column: Decorative circle -->
      <div class="w-full md:w-1/2 flex items-center justify-start p-4 text-main">
        <a href="/assignments/1st_semester/assignment2">
          <div
            class="circle1_1 relative overflow-hidden rounded-full shadow-lg w-[200px] h-[200px] bg-zinc-700 flex items-center justify-center z-10"
          >
            <h2 class="text-2xl font-semibold text-center">Second assignment</h2>
          </div>
        </a>
      </div>
    </div>

    <!-- Final row: Image with hover effect (3rd semester) -->
    <div class="flex flex-col md:flex-row gap-4 p-4 m-10 text-main">
      <!-- First column: Decorative circle -->

      <div class="w-full md:w-1/2 flex items-center justify-center md:justify-end p-4">
        <a href="/assignments/1st_semester/assignment3">
          <div
            class="circle1_2 relative overflow-hidden rounded-full shadow-lg w-[200px] h-[200px] bg-zinc-700 flex items-center justify-center z-10"
          >
            <h2 class="text-2xl font-semibold text-center">Third <br />assignment</h2>
          </div>
        </a>
      </div>

      <!-- Second column: Image with hover effect (3rd semester) -->
      <div class="w-full md:w-1/2 flex items-center justify-start p-4">
        <a href="/assignments/1st_semester/assignment3">
          <div class="circle_3rd relative overflow-hidden rounded-full shadow-lg group w-[400px] h-[400px]">
            <img src="images/animation-site.webp" alt="animation-site" class="w-full h-full object-cover rounded-full" />
            <div
              class="absolute inset-0 bg-black bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
            >
              <h1 class="circle-text text-4xl font-bold text-main">
                ANIMATION-SITE <br /><em class="text-2xl pb-16">(Zodiac Quest)</em>
                <br /><em class="text-lg opacity-70">Unfinished</em>
              </h1>
            </div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-transparent to-gray-300 opacity-30 pointer-events-none"></div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-b from-transparent to-gray-200 opacity-20 pointer-events-none"></div>
          </div>
        </a>
      </div>
    </div>

    <!-- Fourth row: Image with hover effect (4th semester) -->
    <div class="flex flex-col md:flex-row gap-4 p-4 m-20">
      <!-- First column: Image with hover effect (4th semester) -->
      <div class="w-full md:w-1/2 flex items-center justify-center p-4">
        <a href="/assignments/1st_semester/assignment4">
          <div class="circle_4th relative overflow-hidden rounded-full shadow-lg border-opacity-40 group w-[400px] h-[400px]">
            <img src="images/videosite.webp" alt="videosite" class="w-full h-full object-cover rounded-full" />
            <div
              class="absolute inset-0 bg-black bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
            >
              <h1 class="circle-text text-4xl font-bold text-main">VIDEO-SITE <br /><em class="text-2xl">(Person with a passion)</em></h1>
            </div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-gray-300 to-transparent opacity-30 pointer-events-none"></div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-b from-gray-200 to-transparent opacity-20 pointer-events-none"></div>
          </div>
        </a>
      </div>

      <!-- Second column: Decorative circle -->
      <div class="w-full md:w-1/2 flex items-center justify-start p-4 text-main">
        <a href="/error_page">
          <div
            class="circle1_3 relative overflow-hidden rounded-full shadow-lg w-[200px] h-[200px] bg-zinc-700 flex items-center justify-center z-10"
          >
            <h2 class="text-2xl font-semibold text-center">Fourth assignment</h2>
          </div>
        </a>
      </div>
    </div>

    <!-- Fifth row: Image with hover effect (Other projects) -->
    <div class="flex flex-col md:flex-row gap-4 p-4 m-20 text-main">
      <!-- First column: Decorative circle -->
      <div class="w-full md:w-1/2 flex items-center justify-center md:justify-end p-4">
        <a href="/assignments/1st_semester/assignment4">
          <div
            class="circle1_4 relative overflow-hidden rounded-full shadow-lg w-[200px] h-[200px] bg-zinc-700 flex items-center justify-center z-10"
          >
            <h2 class="text-2xl font-semibold text-center">First case-assignment</h2>
          </div>
        </a>
      </div>

      <!-- Second column: Image with hover effect (Other projects) -->
      <div class="w-full md:w-1/2 flex items-center justify-start p-4">
        <a href="/assignments/1st_semester/assignment5">
          <div class="circle_other relative overflow-hidden rounded-full shadow-lg group w-[400px] h-[400px]">
            <img src="images/mak.webp" alt="mak" class="w-full h-full object-cover rounded-full" />
            <div
              class="absolute inset-0 bg-black bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
            >
              <h1 class="circle-text text-4xl font-bold text-main">THE MAK <br /> COMMITTEE</h1>
            </div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-transparent to-gray-300 opacity-30 pointer-events-none"></div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-b from-transparent to-gray-200 opacity-20 pointer-events-none"></div>
          </div>
        </a>
      </div>
    </div>

    <div class="flex flex-col md:flex-row gap-4 p-4 m-20">
      <!-- First column: Image with hover effect (4th semester) -->
      <div class="w-full md:w-1/2 flex items-center justify-center p-4">
        <a href="/assignments/1st_semester/assignment5">
          <div class="circle_4th relative overflow-hidden rounded-full shadow-lg border-opacity-40 group w-[400px] h-[400px]">
            <img src="images/1st_portfolio.webp" alt="portfolio" class="w-full h-full object-cover rounded-full" />
            <div
              class="absolute inset-0 bg-black bg-opacity-70 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
            >
              <h1 class="circle-text text-4xl font-bold text-main">FIRST<br />PORTFOLIO-SITE</h1>
            </div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-gray-300 to-transparent opacity-30 pointer-events-none"></div>
            <div class="absolute inset-0 rounded-full bg-gradient-to-b from-gray-200 to-transparent opacity-20 pointer-events-none"></div>
          </div>
        </a>
      </div>

      <!-- Second column: Decorative circle -->
      <div class="w-full md:w-1/2 flex items-center justify-start p-4 text-main">
        <a href="/assignments/1st_semester/assignment5">
          <div
            class="circle1_3 relative overflow-hidden rounded-full shadow-lg w-[200px] h-[200px] bg-zinc-700 flex items-center justify-center z-10"
          >
            <h2 class="text-2xl font-semibold text-center">Exam-assignment</h2>
          </div>
        </a>
      </div>
    </div>
    <style>
      #img1 {
        mask-image: linear-gradient(rgba(27, 22, 22, 20), transparent);
        -webkit-mask-image: linear-gradient(rgba(27, 22, 22, 20));
      }

      .background {
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        filter: blur(5px) brightness(0.8); /* Applies blur to the background */
        mask-image: linear-gradient(rgba(27, 22, 22, 100), transparent);
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: 0;
      }
    </style>
  </div>
</MainLayout>
