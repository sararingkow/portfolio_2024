<div>
  <button type="submit" class="btn btn-1">
    <a href="/projects"
      >Go To <em>My Projects</em>
      <svg>
        <rect x="0" y="0" width="100%" height="100%"></rect>
      </svg>
    </a>
  </button>
</div>

<style>
  /* Button */
  .btn {
    color: #fff;
    cursor: pointer;
    font-size: 16px;
    font-weight: 400;
    line-height: 45px;
    max-width: 220px;
    position: relative;
    text-decoration: none;
    text-transform: uppercase;
    text-align: center;
    width: 100%;
  }
  .btn-1 {
    background: darken($red, 1.5%);
    font-weight: 100;

    svg {
      height: 45px;
      left: 0;
      position: absolute;
      top: 0;
      width: 100%;
    }

    rect {
      fill: none;
      stroke: #fff;
      stroke-width: 4;
      stroke-dasharray: 422, 0;
      transition: all 0.35s linear;
    }
  }

  .btn-1:hover {
    font-weight: 900;

    rect {
      stroke-width: 5;
      stroke-dasharray: 15, 310;
      stroke-dashoffset: 48;
      transition: all 1.35s cubic-bezier(0.19, 1, 0.22, 1);
    }
  }
</style>
