<header class="text-font-color fixed top-0 left-0 w-full z-50 backdrop-blur-sm">
  <div x-data="{ showmenu: false }" class="p-6">
    <div id="navbar" class="flex flex-row justify-between">
      <div id="logo" class="font-bold hover:opacity-30 transition duration-300">
        <a href="/"><img src="/logo.svg" alt="logo" class="w-28 md:w-24" /></a>
      </div>
      <!-- Desktop Menu -->
      <div id="desktopmenu" class="hidden lg:block text-lg text-center dark:text-main">
        <ul class="flex flex-wrap -mb-px">
          <li class="me-8">
            <a
              href="/"
              class="inline-block p-4 border-b-2 border-transparent rounded-t-lg hover:text-[#FF3333] hover:border-[#FF3333] transition duration-300"
              >Home</a
            >
          </li>
          <li class="me-8">
            <a
              href="/about_me"
              class="inline-block p-4 border-b-2 border-transparent rounded-t-lg hover:text-[#FF3333] hover:border-[#FF3333] transition duration-300"
              >About me</a
            >
          </li>
          <!-- My Projects Dropdown with Arrow -->
          <li class="relative me-8" @mouseenter="showmenu = true" @mouseleave="showmenu = false">
            <a
              href="/projects"
              class="p-4 border-b-2 border-transparent rounded-t-lg hover:text-[#FF3333] hover:border-[#FF3333] transition duration-300 flex items-center"
            >
              My projects
              <svg
                class="w-4 h-4 ml-2 transition-transform duration-300 transform"
                :class="{ 'rotate-180': showmenu }"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
              </svg>
            </a>
            <div
              x-show="showmenu"
              x-transition
              class="absolute left-0 mt-2 w-48 bg-dropdown border border-dropdownBorder rounded-lg shadow-lg z-10"
              style="display: none;"
            >
              <ul>
                <li class="py-2 px-4 hover:bg-dropdownHover transition duration-300">
                  <a href="/1st_semester">1st semester</a>
                  <!-- Updated -->
                </li>
                <li class="py-2 px-4 hover:bg-dropdownHover transition duration-300">
                  <a href="/2nd_semester">2nd semester</a>
                  <!-- Updated -->
                </li>
                <li class="py-2 px-4 hover:bg-dropdownHover transition duration-300">
                  <a href="/3rd_semester">3rd semester</a>
                  <!-- Updated -->
                </li>
                <li class="py-2 px-4 hover:bg-dropdownHover transition duration-300">
                  <a href="/error_page">4th semester</a>
                  <!-- Updated -->
                </li>
                <li class="py-2 px-4 hover:bg-dropdownHover transition duration-300">
                  <a href="/error_page">Other projects</a>
                  <!-- Updated -->
                </li>
              </ul>
            </div>
          </li>
          <li class="me-8">
            <a
              href="/contact"
              class="inline-block p-4 border-b-2 border-transparent rounded-t-lg hover:text-[#FF3333] hover:border-[#FF3333] transition duration-300"
              >Contact</a
            >
          </li>
        </ul>
      </div>
      <!-- Burger Menu Button (Mobile Only) -->
      <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = !showmenu">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-8 text-main hover:opacity-30 transition duration-30"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <!-- Mobile Menu (Hidden on Larger Screens) -->
    <nav
      id="mobilmenu"
      class="flex flex-col content-center pt-4 lg:hidden"
      x-show="showmenu"
      x-transition=""
      x-on:click="showmenu = false"
      x-on:click.outside="showmenu = false"
      style="display: none;"
    >
      <ul>
        <li class="text-center py-3 border-b-[1px] hover:text-[#FF3333] active:text-[#FF3333] active:underline transition duration-30">
          <a href="/about_me">About me</a>
        </li>
        <li class="text-center py-3 border-b-[1px] hover:text-[#FF3333] active:text-[#FF3333] active:underline transition duration-300">
          <a href="/projects">My projects</a>
        </li>
        <li class="text-center py-3 border-b-[1px] hover:text-[#FF3333] active:text-[#FF3333] active:underline transition duration-300">
          <a href="/contact">Contact</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
